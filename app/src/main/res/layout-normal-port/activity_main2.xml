<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <!-- Background Image -->
        <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="397dp"
            android:layout_height="1117dp"
            android:background="@drawable/background_blue"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"

            tools:ignore="ImageContrastCheck,VisualLintBounds" />

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="0dp"
            tools:ignore="RtlSymmetry">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothamb"
                android:text="Estimate Construction Cost with Machine Learning Algorithm"
                android:textColor="@color/white"
                android:textSize="23sp"
                tools:ignore="HardcodedText,TextSizeCheck" />

            <EditText
                android:id="@+id/projectEditText"
                android:layout_width="258dp"
                android:layout_height="45dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:autofillHints=""
                android:background="@drawable/round_btn_w_bg"
                android:hint="Enter Project Name"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="#393535"
                android:fontFamily="@font/consola"
                tools:ignore="HardcodedText,TextContrastCheck,TextFields,VisualLintBounds,VisualLintOverlap,VisualLintTextFieldSize" />
            <EditText
                android:id="@+id/locationEditText"
                android:layout_width="258dp"
                android:layout_height="45dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:autofillHints=""
                android:background="@drawable/round_btn_w_bg"
                android:hint="Enter Project Location"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="#393535"
                android:fontFamily="@font/consola"
                tools:ignore="HardcodedText,TextContrastCheck,TextFields,VisualLintBounds,VisualLintOverlap,VisualLintTextFieldSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:orientation="horizontal"
                android:padding="0dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:padding="0dp">

                    <EditText
                        android:id="@+id/f1EditText"
                        android:layout_width="169dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:autofillHints=""
                        android:background="@drawable/round_btn_w_bg"
                        android:fontFamily="@font/consola"
                        android:hint="F1 Area"
                        android:inputType="numberDecimal"
                        android:minHeight="48dp"
                        android:textColor="@color/black"
                        android:textColorHint="#393535"
                        tools:ignore="HardcodedText,TextContrastCheck,VisualLintBounds,VisualLintOverlap,VisualLintTextFieldSize" />

                    <EditText
                        android:id="@+id/f1_1EditText"
                        android:layout_width="83dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:autofillHints=""
                        android:background="@drawable/round_btn_w_bg"
                        android:fontFamily="@font/consola"
                        android:hint="@string/f1"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:textColor="@color/black"
                        android:textColorHint="#393535"
                        tools:ignore="DuplicateSpeakableTextCheck,VisualLintOverlap" />

                    <EditText
                        android:id="@+id/f2_1EditText"
                        android:layout_width="85dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:autofillHints=""
                        android:background="@drawable/round_btn_w_bg"
                        android:fontFamily="@font/consola"
                        android:hint="@string/f2"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:textColor="@color/black"
                        android:textColorHint="#393535"
                        tools:ignore="VisualLintOverlap" />

                    <EditText
                        android:id="@+id/f1_2EditText"
                        android:layout_width="54dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:autofillHints=""
                        android:background="@drawable/round_btn_w_bg"
                        android:fontFamily="@font/consola"
                        android:hint="@string/f1_1"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:textColor="@color/black"
                        android:textColorHint="#393535" />

                    <EditText
                        android:id="@+id/f2_2EditText"
                        android:layout_width="54dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="90dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:autofillHints=""
                        android:background="@drawable/round_btn_w_bg"
                        android:fontFamily="@font/consola"
                        android:hint="@string/f2_1"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:textColor="@color/black"
                        android:textColorHint="#393535"
                        tools:ignore="DuplicateSpeakableTextCheck" />

                    <EditText
                        android:id="@+id/f3_2EditText"
                        android:layout_width="54dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="147dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:autofillHints=""
                        android:background="@drawable/round_btn_w_bg"
                        android:fontFamily="@font/consola"
                        android:hint="@string/f3"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:textColor="@color/black"
                        android:textColorHint="#393535" />

                </FrameLayout>

                <Spinner
                    android:id="@+id/floorsSpinner"
                    android:layout_width="81dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/round_btn_w_bg1"
                    android:entries="@array/storeys"
                    android:fontFamily="@font/consola"
                    android:minHeight="45dp"
                    android:prompt="@string/select_construction_type"
                    android:visibility="visible" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginStart="50dp"
                android:text="Area by Storey"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:fontFamily="@font/gothamb"
                tools:ignore="HardcodedText,TextSizeCheck" />
            <EditText
                android:id="@+id/rooms"
                android:layout_width="258dp"
                android:layout_height="45dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:autofillHints=""
                android:background="@drawable/round_btn_w_bg"
                android:hint="Enter Number of Rooms"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="#393535"
                android:fontFamily="@font/consola"
                tools:ignore="HardcodedText,TextContrastCheck,VisualLintBounds,VisualLintOverlap,VisualLintTextFieldSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal"
                android:padding="0dp">

                <EditText
                    android:id="@+id/windows"
                    android:layout_width="137dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="0dp"
                    android:autofillHints=""
                    android:background="@drawable/round_btn_w_bg"
                    android:fontFamily="@font/consola"
                    android:hint="No. of Windows"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:textColorHint="#393535"
                    tools:ignore="HardcodedText,TextContrastCheck,VisualLintBounds,VisualLintOverlap,VisualLintTextFieldSize" />

                <Spinner
                    android:id="@+id/windowtypeSpinner"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/round_btn_w_bg1"
                    android:entries="@array/windows"
                    android:fontFamily="@font/consola"
                    android:minHeight="45dp"
                    android:prompt="@string/select_construction_type"
                    android:visibility="visible" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginStart="0dp"
                android:orientation="horizontal"
                android:padding="0dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginStart="180dp"
                    android:text="window type"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:fontFamily="@font/gothamb"
                    tools:ignore="HardcodedText,TextSizeCheck" />

            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal"
            android:padding="0dp">

                <EditText
                    android:id="@+id/doors"
                    android:layout_width="137dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="0dp"
                    android:autofillHints=""
                    android:background="@drawable/round_btn_w_bg"
                    android:fontFamily="@font/consola"
                    android:hint="No. of Doors"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:textColorHint="#393535"
                    tools:ignore="HardcodedText,TextContrastCheck,VisualLintBounds,VisualLintOverlap,VisualLintTextFieldSize" />

                <Spinner
                    android:id="@+id/doorTypeSpinner"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/round_btn_w_bg1"
                    android:entries="@array/doors"
                    android:fontFamily="@font/consola"
                    android:minHeight="45dp"
                    android:prompt="@string/select_construction_type"
                    android:visibility="visible" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginStart="0dp"
                android:orientation="horizontal"
                android:padding="0dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginStart="180dp"
                    android:text="door type"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:fontFamily="@font/gothamb"
                    tools:ignore="HardcodedText,TextSizeCheck" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal"
                android:padding="0dp">

                <Spinner
                    android:id="@+id/ceilingtypeSpinner"
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/round_btn_w_bg1"
                    android:entries="@array/ceiling"
                    android:fontFamily="@font/consola"
                    android:minHeight="45dp"
                    android:prompt="@string/select_construction_type"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/wallingtypeSpinner"
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/round_btn_w_bg1"
                    android:entries="@array/walling"
                    android:fontFamily="@font/consola"
                    android:minHeight="45dp"
                    android:prompt="@string/select_construction_type"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/flooringtypeSpinner"
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/round_btn_w_bg1"
                    android:entries="@array/flooring"
                    android:fontFamily="@font/consola"
                    android:minHeight="45dp"
                    android:prompt="@string/select_construction_type"
                    android:visibility="visible" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginStart="0dp"
            android:orientation="horizontal"
            android:padding="0dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginStart="35dp"
                android:text="ceiling type"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:fontFamily="@font/gothamb"
                tools:ignore="HardcodedText,TextSizeCheck" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginStart="15dp"
                android:text="walling type"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:fontFamily="@font/gothamb"
                tools:ignore="HardcodedText,TextSizeCheck" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginStart="15dp"
                android:text="flooring type"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:fontFamily="@font/gothamb"
                tools:ignore="HardcodedText,TextSizeCheck" />

        </LinearLayout>
            <EditText
                android:id="@+id/engEditText"
                android:layout_width="258dp"
                android:layout_height="45dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:autofillHints=""
                android:background="@drawable/round_btn_w_bg"
                android:hint="Engineer Name"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="#393535"
                android:fontFamily="@font/consola"
                tools:ignore="HardcodedText,TextContrastCheck,TextFields,VisualLintBounds,VisualLintOverlap,VisualLintTextFieldSize" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_marginStart="1dp"
                android:orientation="horizontal"
                android:padding="0dp">

                <Button
                    android:id="@+id/clear"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="68dp"
                    android:layout_height="51dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/round_btn45red"
                    android:fontFamily="@font/gothamb"
                    android:text="@string/clear"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


                <Button
                    android:id="@+id/reset"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/round_btn45"
                    android:paddingStart="0dp"
                    android:text="@string/reset"
                    android:textAlignment="inherit"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    tools:ignore="RtlSymmetry,TextSizeCheck" />

                <Button
                    android:id="@+id/calculateButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="103dp"
                    android:layout_height="51dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_btn_w_bg2"
                    android:fontFamily="@font/gothamb"
                    android:text="Calculate"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText,VisualLintBounds,VisualLintOverlap,TextSizeCheck,TextContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="374dp"
                android:layout_height="219dp"
                android:orientation="vertical"
                tools:ignore="VisualLintBounds">

                <TextView
                    android:id="@+id/totalCostTextView"
                    android:layout_width="313dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/dialog_bg"
                    android:fontFamily="@font/consola"
                    android:text="Total Cost: PHP 0.0"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText,TextSizeCheck,VisualLintBounds,TextContrastCheck" />

                <Button

                    android:id="@+id/showmore"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="313dp"
                    android:layout_height="62dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/square"
                    android:text="@string/show_more"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="313dp"
                    android:layout_height="104dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/square"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:ignore="SpeakableTextPresentCheck,VisualLintBounds" />


            </LinearLayout>

            <!-- Add other sections and views as needed -->
        </LinearLayout>

    </FrameLayout>

</LinearLayout>
